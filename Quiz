	cout << "and so on, all of which are physical objects that are tangible: \n";
	cout << "\n";
	cout << "ANSWER: \n";
    cin >> answer1;
    cout << "\n";

    if(answer1 == key1)
	{
        cout << "Correct! \n";
        score++;
    }
    else 
	{ 
        cout << "Wrong! \n";
    }
    
    cout << "\n\n\n";
    cout << "QUESTION 2 \n\n";
