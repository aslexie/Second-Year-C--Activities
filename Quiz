    cout << "\n";

    if(answer2 == key2)
	{
        cout << "Correct! \n";
        score++;
    }
    else 
	{ 
        cout << "Wrong! \n";
    }
    
    cout << "\n\n\n";
    cout << "QUESTION 3 \n\n";
	cout << "This is the main component of a computer. \n";
	cout << "\n";
	cout << "ANSWER: \n";
    cin >> answer3;
    cout << "\n";

    if(answer3 == key3)
	{
        cout << "Correct! \n";
        score++;
    }
    else 
	{ 
        cout << "Wrong! \n";
    }
    
    cout << "\n\n\n";
    cout << "QUESTION 4 \n\n";
	cout << "A diagram that depicts a process, system or computer algorithm. \n";
	cout << "\n";
	cout << "ANSWER: \n";
